{
    "branches": ["main"],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "npm run build"
            }
        ],
        [
            "semantic-release-replace-plugin",
            {
                "replacements": [
                    {
                        "files": ["dist/module.json"],
                        "from": "{{VERSION}}",
                        "to": "${nextRelease.version}",
                        "countMatches": true
                    }
                ]
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "npm version ${nextRelease.version} --no-git-tag-version && cd dist && zip -r ../fortune-metalmind.zip ./*"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "fortune-metalmind.zip",
                        "label": "Module ZIP"
                    },
                    {
                        "path": "dist/module.json",
                        "label": "Module Manifest"
                    }
                ]
            }
        ],
        [
            "@semantic-release/exec",
            {
                "publishCmd": "npx @ghost-fvtt/foundry-publish@4.0.0 --manifestURL https://github.com/cryptiklemur/fortune-metalmind-module/releases/download/v${nextRelease.version}/module.json --changelogURL https://github.com/cryptiklemur/fortune-metalmind-module/releases/tag/v${nextRelease.version}"
            }
        ]
    ]
}
