{
    "branches": ["main"],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "npm run build"
            }
        ],
        [
            "semantic-release-replace-plugin",
            {
                "replacements": [
                    {
                        "files": ["dist/module.json"],
                        "from": "{{VERSION}}",
                        "to": "v${nextRelease.version}",
                        "countMatches": true
                    }
                ]
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "npm version ${nextRelease.version} --no-git-tag-version && cd dist && zip -r ../fortune-metalmind-${nextRelease.version}.zip ./*"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json",
                    "package-lock.json"
                ],
                "message": "chore(release): ${nextRelease.version}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "fortune-metalmind-*.zip",
                        "label": "Module ZIP"
                    },
                    {
                        "path": "dist/module.json",
                        "label": "Module Manifest"
                    }
                ]
            }
        ]
    ]
}
